<Window x:Class="EvalonServer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EvalonServer"
        mc:Ignorable="d"
        Title="管理员登陆窗口" Height="300" Width="400">
    <Grid>
        <Label Content="用户名" HorizontalAlignment="Left" Margin="80,65,0,0" VerticalAlignment="Top"/>
        <Label Content="密码" HorizontalAlignment="Left" Margin="80,129,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="UsernameTextBox" HorizontalAlignment="Left" Height="21" Margin="174,65,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="141" RenderTransformOrigin="0.5,0.5"/>
        <Button x:Name="LoginBtn" Click="LoginBtnClick" Content="登陆" HorizontalAlignment="Left" Margin="102,204,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="QuitBtn" Click="QuitBtnClick" Content="退出" HorizontalAlignment="Left" Margin="220,204,0,0" VerticalAlignment="Top" Width="75"/>
        <PasswordBox  x:Name="PwdTextBox" HorizontalAlignment="Left" Margin="174,133,0,0" VerticalAlignment="Top" Width="141"/>
    </Grid>
</Window>
